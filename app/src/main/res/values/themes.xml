<resources>
    <!-- Base application theme. -->
    <style name="Theme.YouEarn" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="actionBarTheme">@style/MyTheme</item>
        <item name="fontFamily">@font/inter_med</item>
    </style>

    <style name="btnBlueSmall">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="btnWhiteRounded">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">@dimen/_37sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="txtBlackBoldCenter22">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_22ssp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="txtGrayCenter11">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="txtBlackCenter16">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="txtBlack12TopSpaced">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:gravity">start</item>
    </style>


    <style name="txtBlackBoldCenter16">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="editText">
        <item name="android:background">@drawable/bg_white_curved_blue_outlined</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:singleLine">true</item>
        <item name="android:longClickable">false</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:maxLength">200</item>
    </style>

    <style name="btnBlue">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">@dimen/_20sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

</resources>