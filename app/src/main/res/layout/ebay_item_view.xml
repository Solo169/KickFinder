<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="model"
            type="com.ionut.sneakerdata.model.Product" />

        <variable
            name="rates"
            type="Double" />

        <variable
            name="price"
            type="Integer" />
    </data>


    <LinearLayout android:layout_width="match_parent"

        android:layout_margin="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_browse"
        android:padding="10dp"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ID: "
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@{model.itemId.toString(),default=`id`}"
                android:fontFamily="@font/inter_med"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@{model.title.toString(),default=`title`}"
                android:fontFamily="@font/inter_med"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@{`Â£` + price,default=`price`}"
                android:fontFamily="@font/inter_med"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />




        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/btn_sales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View on Ebay" />


    </LinearLayout>


</layout>