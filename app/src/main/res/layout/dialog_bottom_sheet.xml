<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/box_filled_off_white_half_curved"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="@dimen/_15sdp">

    <TextView
        android:id="@+id/title"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/log_out"
        style="@style/txtBlackBoldCenter22"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_below="@id/title"
        android:background="@drawable/ic_divider" />

    <TextView
        android:id="@+id/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Are you sure you want to logout"
        style="@style/txtGrayCenter11"
        android:layout_below="@id/divider"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/subTitle"
        android:layout_marginTop="@dimen/_20sdp"
        android:weightSum="2">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:text="Cancel"
            style="@style/btnWhiteRounded" />

        <TextView
            android:id="@+id/btnYes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:text="Yes, Logout"
            style="@style/btnBlueSmall" />
    </LinearLayout>


</RelativeLayout>